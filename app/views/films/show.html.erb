<%if @film.present?%>
  Title: <%= check_for_record(@film.title)%></br>
  Episode: <%= check_for_record(@film.episode_id)%></br>
  Director: <%=check_for_record(@film.director)%></br>
  Release Date: <%=check_for_record(@film.release_date)%></br>
  Producer: <%=check_for_record(@film.producer)%></br>
  </br>
  Opening Crawl: <%=check_for_record(@film.opening_crawl)%></br>
  </br>
  <b>Characters:</b></br>
  <% @film.characters.each do |character|%>
    <%if character.present?%>
      <%= link_to character.name, person_path(get_id(character.url))%></br>
    <%end%>
  <%end%>
  </br>
  <b>Vehicles:</b></br>
  <% @film.vehicles.each do |vehicle|%>
    <%if vehicle.present?%>
      <%= link_to vehicle.name, vehicle_path(get_id(vehicle.url))%></br>
    <%end%>
  <%end%>
  </br>
  <b>Planets:</b></br>
  <% @film.planets.each do |planet|%>
    <%if planet.present?%>
      <%= link_to planet.name, planet_path(get_id(planet.url))%></br>
    <%end%>
  <%end%>
<%else%>
  Something went wrong! Check back at a later time.
<%end%>